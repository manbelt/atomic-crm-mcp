# Server Configuration
PORT=3000
MCP_SERVER_URL=http://localhost:3000
NODE_ENV=development

# Supabase Configuration
# Get these from your Supabase Dashboard: https://supabase.com/dashboard/project/_/settings/general

# Supabase Auth URL (for JWT validation via JWKS)
# Format: https://YOUR-PROJECT-REF.supabase.co
SUPABASE_URL=https://dapqcnlbilcpwwlwivvj.supabase.co

# PostgreSQL connection (for direct SQL queries with RLS)
# Get this from: Supabase Dashboard → Project Settings → Database → Connection String → URI
# Copy the "Connection string" and replace [YOUR-PASSWORD] with your database password
# Format: postgresql://postgres:YOUR-PASSWORD@db.YOUR-PROJECT-REF.supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:S2EXb34xj9O6Ewu7@db.dapqcnlbilcpwwlwivvj.supabase.co:5432/postgres

# Redis Configuration (Optional - for caching and session management)
# If not provided, caching will be disabled
# Format: redis://[:password@]host[:port][/db-number]
REDIS_URL=redis://localhost:6379

# Session Configuration (for stateless JWT sessions)
# Generate a secure random string: openssl rand -hex 32
SESSION_SECRET=your-secure-session-secret-here

# Security Configuration
# CSRF protection is enabled by default for non-MCP routes
CSRF_ENABLED=true

# Rate Limiting Configuration
RATE_LIMIT_STANDARD=100
RATE_LIMIT_QUERY=30
RATE_LIMIT_WRITE=20

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# APM Configuration (Optional)
APM_ENABLED=true
APM_SAMPLE_RATE=1.0

# Alerting Configuration (Optional)
# Slack webhook URL for alert notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Database Pool Configuration
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=5000

# Request Queue Configuration
QUEUE_MAX_CONCURRENT=10
QUEUE_MAX_SIZE=1000
QUEUE_TIMEOUT=30000
